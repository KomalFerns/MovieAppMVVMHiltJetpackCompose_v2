<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/movie"
    app:startDestination="@id/movieListFragment">

    <fragment
        android:id="@+id/movieListFragment"
        android:name="com.telushealth.movies.ui.movie.list.MovieListFragment"
        android:label="Benedict Cumberbatch Movies"
        tools:layout="@layout/fragment_movie_list">

        <action
            android:id="@+id/action_movieListFragment_to_movieDetailFragment"
            app:destination="@id/movieDetailFragment" />

    </fragment>

    <fragment
        android:id="@+id/movieDetailFragment"
        android:name="com.telushealth.movies.ui.movie.detail.MovieDetailFragment"
        android:label="Movie Details"
        tools:layout="@layout/fragment_movie_list">

        <argument
            android:name="movieId"
            app:argType="integer" />

        <argument
            android:name="movieTitle"
            app:argType="string" />

        <action
            android:id="@+id/action_movieDetailFragment_to_self"
            app:destination="@id/movieDetailFragment" />

    </fragment>

</navigation>
